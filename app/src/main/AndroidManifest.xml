<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softfruit.solutions.carehack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeActionBar">
        <activity
            android:name="softfruit.solutions.carehack.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="softfruit.solutions.carehack.activity.authentication.PhoneAuthActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />
        <activity
            android:name="softfruit.solutions.carehack.activity.authentication.PhoneVerificationActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name="softfruit.solutions.carehack.activity.authentication.ProfileActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="softfruit.solutions.carehack.activity.MainActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name="softfruit.solutions.carehack.calendar.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppThemeActionBar.NoActionBar" />
        <activity
            android:name="softfruit.solutions.carehack.activity.doctors.DoctorsActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name="softfruit.solutions.carehack.activity.booking.BookingActivity"></activity>
    </application>

</manifest>